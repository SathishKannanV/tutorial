<SCRIPT>
var relPath="<%=request.getContextPath()%>";
$(document).ready( function(e) {

$('#AddNewRbrc').click(function(){
var action = relPath+'/rbrc/AddRbrc';
var flag = ValidateInput();
if(flag){
	$("#addRbrcForm").attr('action', action).submit();
	}
	});
	
	});
	
	
function ListSTCs()
	{
	window.open(relPath+'/rbrc/stcList', null, "height=550,width=375,status=yes,toolbar=no,menubar=no,location=no,scrollbars")
	}

function ValidateInput(){
var returnFlag = true;
	if ($.trim($('#siteCd').val()) == "") { 
		alert("You must Enter Site Code!");
		$('#siteCd').focus();
		returnFlag = false;
	} else

	if ($('#siteCd').val().substring(0,1) == " ") {
		alert("You must not Enter Space as first Character for Site Code!");
		$('#siteCd').focus();
		returnFlag = false;
	} else	
	if ($.trim($('#riderCd').val()) == "") { 
		alert("You must Enter Rider Code!");
		$('#riderCd').focus();
		returnFlag = false;
	} else
	if ($('#riderCd').val().substring(0,1) == " ") {
		alert("You must not Enter Space as first Character for Rider Code!");
		$('#riderCd').focus();
		returnFlag = false;
	} else	
	if ($.trim($('#svcTypeCd').val()) == "") {
		alert("You must select Service Type Code!");
		$('#svcTypeCd').focus();
		returnFlag = false;
	} 
	return returnFlag;
}

</SCRIPT>

<BODY bgcolor="#e1eeb9">

