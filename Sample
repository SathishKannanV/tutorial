<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>



<h1>Exception Page</h1>



<h4>Exception: ${exception}</h4>



<c:set var="rootCause" value="${exception}"/>

<c:if test="${exception.cause != null}">

	<c:set var="rootCause" value="${exception.cause}"/>

</c:if>



Root Cause:

<c:out value="${rootCause.class.name}: ${rootCause.message}"/><br/>

<c:forEach items="${rootCause.stackTrace}" var="st">

	&nbsp;&nbsp;<c:out value="${st}"/><br/>

</c:forEach>



